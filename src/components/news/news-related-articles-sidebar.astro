---
/**
 * Related Articles Sidebar Component
 * Shows related news articles based on category or recent posts
 */
import type { NewsArticle, NewsCategory } from '@/types/property';
import { formatRelativeTime } from '@/utils/format';

interface Props {
  articles: NewsArticle[];
  currentSlug: string;
  category: NewsCategory;
  maxItems?: number;
}

const { articles, currentSlug, category, maxItems = 4 } = Astro.props;

// Get related articles: same category first, then recent
const sameCategory = articles.filter(
  (article) => article.slug !== currentSlug && article.category === category
);
const otherArticles = articles.filter(
  (article) => article.slug !== currentSlug && article.category !== category
);

const relatedArticles = [...sameCategory, ...otherArticles].slice(0, maxItems);

// Category label mapping
const categoryLabels: Record<NewsCategory, string> = {
  market: 'Thị trường',
  tips: 'Kiến thức',
  policy: 'Chính sách',
  project_news: 'Dự án',
  investment: 'Đầu tư',
};

// Category color mapping
const categoryColors: Record<NewsCategory, string> = {
  market: 'bg-blue-500/90',
  tips: 'bg-green-500/90',
  policy: 'bg-purple-500/90',
  project_news: 'bg-orange-500/90',
  investment: 'bg-amber-500/90',
};
---

<div class="bg-white rounded-2xl shadow-lg p-5">
  <h3 class="text-lg font-bold text-secondary-800 mb-4 flex items-center gap-2">
    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
    </svg>
    Bài viết liên quan
  </h3>

  <div class="space-y-4">
    {relatedArticles.map((article) => (
      <a
        href={`/tin-tuc/${article.slug}`}
        class="group flex gap-3 p-2 -mx-2 rounded-xl hover:bg-secondary-50 transition-colors duration-200"
      >
        <!-- Thumbnail -->
        <div class="relative w-20 h-16 flex-shrink-0 rounded-lg overflow-hidden">
          <img
            src={article.thumbnail}
            alt={article.title}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            loading="lazy"
          />
          <!-- Category badge -->
          <span class={`absolute top-1 left-1 px-1.5 py-0.5 text-[10px] font-semibold text-white rounded ${categoryColors[article.category]}`}>
            {categoryLabels[article.category]}
          </span>
        </div>

        <!-- Content -->
        <div class="flex-1 min-w-0">
          <h4 class="text-sm font-medium text-secondary-800 line-clamp-2 group-hover:text-primary-500 transition-colors duration-200 leading-snug">
            {article.title}
          </h4>
          <div class="flex items-center gap-2 mt-1.5 text-xs text-secondary-400">
            <span class="flex items-center gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {formatRelativeTime(article.publishedAt)}
            </span>
          </div>
        </div>
      </a>
    ))}
  </div>

  <!-- View All Link -->
  <a
    href="/tin-tuc"
    class="mt-4 flex items-center justify-center gap-2 py-2.5 text-sm font-medium text-primary-500 hover:text-primary-600 hover:bg-primary-50 rounded-xl transition-colors duration-200"
  >
    Xem tất cả tin tức
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </a>
</div>
