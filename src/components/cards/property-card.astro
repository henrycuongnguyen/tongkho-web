---
/**
 * PropertyCard - Property listing card with image, price, badges, and features
 *
 * @example
 * <PropertyCard property={propertyData} />
 *
 * @prop property - Property object with title, price, images, location, etc.
 */
import type { Property } from '@/types/property';
import { formatPrice, formatRelativeTime } from '@/utils/format';
import ShareButtons from '@/components/ui/share-buttons.astro';

interface Props {
  /** Property data object containing all listing information */
  property: Property;
}

const { property } = Astro.props;
---

<a href={`/bds/${property.slug}`} class="card group block">
  <!-- Image Container -->
  <div class="relative aspect-[4/3] overflow-hidden">
    <img
      src={property.thumbnail}
      alt={property.title}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
      loading="lazy"
    />

    <!-- Soft overlay gradient -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-500"></div>

    <!-- Badges -->
    <div class="absolute top-3 left-3 flex gap-2">
      {property.isHot && (
        <span class="badge badge-hot">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
          </svg>
          HOT
        </span>
      )}
      {property.isFeatured && (
        <span class="badge badge-featured">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Nổi bật
        </span>
      )}
    </div>

    <!-- Action Buttons - vertical stack, show on hover -->
    <div class="absolute top-3 right-3 flex flex-col gap-1.5 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <!-- Compare Button -->
      <button
        class="w-8 h-8 flex items-center justify-center bg-white/90 backdrop-blur-sm rounded-full shadow-md hover:bg-white hover:scale-110 transition-all duration-300 cursor-pointer"
        aria-label="So sánh"
        title="So sánh"
        onclick="event.preventDefault(); event.stopPropagation();"
      >
        <svg class="w-4 h-4 text-secondary-400 hover:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
      </button>
      <!-- Share Button with Popup -->
      <ShareButtons url={`/bds/${property.slug}`} title={property.title} variant="popup" />
      <!-- Favorite Button -->
      <button
        class="w-8 h-8 flex items-center justify-center bg-white/90 backdrop-blur-sm rounded-full shadow-md hover:bg-white hover:scale-110 transition-all duration-300 cursor-pointer"
        aria-label="Yêu thích"
        title="Yêu thích"
        onclick="event.preventDefault(); event.stopPropagation();"
      >
        <svg class="w-4 h-4 text-secondary-400 hover:text-red-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      </button>
    </div>

    <!-- Price Tag -->
    <div class="absolute bottom-3 left-3 right-3">
      <span class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-primary-500 to-primary-600 text-white font-bold rounded-xl shadow-lg shadow-primary-500/30">
        {formatPrice(property.price, property.priceUnit)}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-5">
    <h3 class="font-semibold text-secondary-800 line-clamp-2 group-hover:text-primary-500 transition-colors duration-300 mb-3 leading-snug">
      {property.title}
    </h3>

    <!-- Location -->
    <p class="flex items-center gap-1.5 text-sm text-secondary-500 mb-2">
      <svg class="w-4 h-4 text-primary-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <span class="truncate">{property.district}, {property.city}</span>
    </p>
    <!-- Time -->
    <p class="flex items-center gap-1 text-xs text-secondary-400 mb-4">
      <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      {formatRelativeTime(property.createdAt)}
    </p>

    <!-- Features with dividers -->
    <div class="flex items-center gap-3 text-secondary-600 text-sm pt-3 border-t border-secondary-100">
      <span class="flex items-center gap-1.5">
        <svg class="w-4 h-4 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
        </svg>
        <span class="font-medium">{property.area}</span> m²
      </span>
      {property.bedrooms && (
        <>
          <span class="w-1 h-1 rounded-full bg-secondary-300"></span>
          <span class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span class="font-medium">{property.bedrooms}</span> PN
          </span>
        </>
      )}
      {property.bathrooms && (
        <>
          <span class="w-1 h-1 rounded-full bg-secondary-300"></span>
          <span class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
            </svg>
            <span class="font-medium">{property.bathrooms}</span> WC
          </span>
        </>
      )}
    </div>
  </div>
</a>

