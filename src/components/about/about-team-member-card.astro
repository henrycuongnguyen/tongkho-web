---
/**
 * TeamMemberCard - Displays individual team member info on About page
 *
 * @example
 * <TeamMemberCard name="John Doe" role="CEO" image="/team/john.jpg" />
 *
 * @prop name - Team member's full name
 * @prop role - Job title or position
 * @prop image - Profile image URL
 * @prop description - Optional bio or description
 */
interface Props {
  /** Team member's full name */
  name: string;
  /** Job title or position */
  role: string;
  /** Profile image URL */
  image: string;
  /** Optional bio or description */
  description?: string;
}

const { name, role, image, description } = Astro.props;
---

<div class="card group text-center p-6 hover:shadow-xl">
  <!-- Avatar -->
  <div class="relative w-28 h-28 mx-auto mb-4">
    <img
      src={image}
      alt={name}
      class="w-full h-full rounded-full object-cover border-4 border-white shadow-lg group-hover:border-primary-200 transition-colors duration-300"
      loading="lazy"
    />
    <!-- Decorative ring -->
    <div class="absolute inset-0 rounded-full border-2 border-dashed border-primary-300 opacity-0 group-hover:opacity-100 scale-110 transition-all duration-300"></div>
  </div>

  <!-- Name -->
  <h3 class="font-bold text-lg text-secondary-800 group-hover:text-primary-600 transition-colors duration-300">
    {name}
  </h3>

  <!-- Role -->
  <p class="text-primary-500 text-sm font-medium mt-1 mb-3">
    {role}
  </p>

  <!-- Description -->
  {description && (
    <p class="text-secondary-500 text-sm leading-relaxed">
      {description}
    </p>
  )}

  <!-- Social links placeholder -->
  <div class="flex justify-center gap-2 mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <a href="#" class="w-8 h-8 flex items-center justify-center rounded-full bg-secondary-100 text-secondary-500 hover:bg-primary-500 hover:text-white transition-colors" aria-label="LinkedIn">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
      </svg>
    </a>
    <a href="#" class="w-8 h-8 flex items-center justify-center rounded-full bg-secondary-100 text-secondary-500 hover:bg-primary-500 hover:text-white transition-colors" aria-label="Email">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
    </a>
  </div>
</div>
