---
import type { NewsArticle } from '@/types/property';
import { formatRelativeTime } from '@/utils/format';

interface Props {
  articles: NewsArticle[];
}

const { articles } = Astro.props;
---

<section class="section bg-gradient-to-b from-white via-secondary-50/30 to-white">
  <div class="container-custom">
    <!-- Section Header - wrap on mobile -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-10">
      <div>
        <h2 class="section-title">Tin tức nổi bật</h2>
        <div class="w-16 h-1 bg-gradient-to-r from-primary-500 to-primary-300 rounded-full mt-3"></div>
      </div>
      <a
        href="/tin-tuc"
        class="group flex items-center gap-2 px-5 py-2.5 text-primary-500 hover:text-primary-600 font-medium rounded-full hover:bg-primary-50 transition-all duration-300"
        aria-label="Xem thêm tin tức nổi bật"
      >
        Xem thêm
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <!-- News Grid - 4x2 layout -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5 lg:gap-6">
      {articles.map((article, index) => (
        <a
          href={`/tin-tuc/${article.slug}`}
          class="card group block"
          style={`animation-delay: ${index * 100}ms;`}
        >
          <!-- Image -->
          <div class="relative aspect-[16/10] overflow-hidden">
            <img
              src={article.thumbnail}
              alt={article.title}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
              loading="lazy"
            />
            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-500"></div>

            <!-- Category Badge -->
            <div class="absolute top-3 left-3">
              <span class:list={[
                'px-2.5 py-1 text-xs font-semibold rounded-full backdrop-blur-sm',
                article.category === 'market' && 'bg-blue-500/90 text-white',
                article.category === 'tips' && 'bg-green-500/90 text-white',
                article.category === 'policy' && 'bg-purple-500/90 text-white',
                article.category === 'project_news' && 'bg-orange-500/90 text-white',
                article.category === 'investment' && 'bg-amber-500/90 text-white',
              ]}>
                {article.category === 'market' && 'Thị trường'}
                {article.category === 'tips' && 'Kiến thức'}
                {article.category === 'policy' && 'Chính sách'}
                {article.category === 'project_news' && 'Dự án'}
                {article.category === 'investment' && 'Đầu tư'}
              </span>
            </div>
          </div>

          <!-- Content -->
          <div class="p-4">
            <!-- Date & Views -->
            <div class="flex items-center gap-2 text-xs text-secondary-400 mb-2">
              <span class="flex items-center gap-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {formatRelativeTime(article.publishedAt)}
              </span>
              <span class="w-1 h-1 rounded-full bg-secondary-300"></span>
              <span class="flex items-center gap-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                {article.views.toLocaleString()}
              </span>
            </div>

            <!-- Title -->
            <h3 class="font-semibold text-sm text-secondary-800 line-clamp-2 group-hover:text-primary-500 transition-colors duration-300 leading-snug">
              {article.title}
            </h3>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
