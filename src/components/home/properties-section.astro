---
import PropertyCard from '@components/cards/property-card.astro';
import type { Property } from '@/types/property';

interface Props {
  title: string;
  properties: Property[];
  viewAllLink: string;
  variant?: 'default' | 'warm';
}

const { title, properties, viewAllLink, variant = 'default' } = Astro.props;
const bgClass = variant === 'warm' ? 'bg-warm-gradient' : 'bg-soft-gradient';
---

<section class:list={['section', bgClass]}>
  <div class="container-custom">
    <!-- Section Header - wrap on mobile -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-10">
      <div>
        <h2 class="section-title">{title}</h2>
        <div class="w-16 h-1 bg-gradient-to-r from-primary-500 to-primary-300 rounded-full mt-3"></div>
      </div>
      <a
        href={viewAllLink}
        class="group flex items-center gap-2 px-5 py-2.5 text-primary-500 hover:text-primary-600 font-medium rounded-full hover:bg-primary-50 transition-all duration-300"
        aria-label={`Xem thêm ${title.toLowerCase()}`}
      >
        Xem thêm
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <!-- Property Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {properties.map((property, index) => (
        <div
          class="opacity-0 animate-fade-in-up"
          style={`animation-delay: ${index * 100}ms; animation-fill-mode: forwards;`}
        >
          <PropertyCard property={property} />
        </div>
      ))}
    </div>
  </div>
</section>
